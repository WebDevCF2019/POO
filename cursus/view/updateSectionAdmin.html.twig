{# on étend le template depuis base.html.twig, qui est donc son parent #}
{% extends "template1.html.twig" %}

{# on veut surcharger le title, on utilise le bloc, on récupère le contenu du parent {{ parent() }} et on rajoute notre texte #}
{% block title %}{{ parent() }} | Admin | Modifier une section{% endblock %}

{% block menuhaut %}
{% include "menuhautadmin.html.twig" %}
{% endblock %}

{% block milieu %}
    <!-- Page Content -->
<main role="main" class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="mt-5">Administration du CF2m</h1>
                <p class="lead">Admin | Modifier une section</p>
            </div>
            <div class="col-lg-6 text-left">
                {# Affichage du formulaire #}
                <form action="" method="post" name="createSection">
                    <input name="thetitle" type="text" placeholder="Titre de la section" value="{{ contenu.thetitle }}" required><br>
                    <textarea name="thedesc" placeholder="Description de la section" required>{{ contenu.thedesc }}</textarea><br>
                    <input type="hidden" name="idthesection" value="{{ contenu.idthesection }}">
                    <input type="submit" value="Envoyer">
                </form>
                <h3>{{ error }}</h3>
            </div>
        </div>
</main>

{% endblock %}

{% block bas %}
{% include "footer.html.twig" %}
{% endblock %}